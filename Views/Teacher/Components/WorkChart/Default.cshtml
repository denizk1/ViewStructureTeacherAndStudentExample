@model List<WorkChart>


<table class="table table-hover">
    <tr>
        <th>Ogretmen</th>
        <th>Pazartesi</th>
        <th>Salı</th>
        <th>Carsamba</th>
        <th>Persembe</th>
        <th>Cuma</th>
    </tr>
    @foreach (WorkChart item in Model)
    {
        <tr>
            <td>@item.TeacherName</td>
            @foreach (bool charitem in item.Chart)
            {
                string x = charitem ? "X" : "";
                <td>
                    @x
                </td>
            }
        </tr>
    }
</table>